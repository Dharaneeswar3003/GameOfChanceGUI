<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <children>
        <Label fx:id = "welcomeLabel" text = "Welcome to the Game of Chance!!"/>
        <Label fx:id="pointsLabel" text="Points: 100"/>
        <Label fx:id="diceresultLabel" text = "Dice output"/>
        <Label fx:id="resultLabel" text = "Your result will be displayed here"/>
        
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <Button fx:id="rollButton" layoutX="275.0" layoutY="35.0" onAction="#rollDice" text="Roll Dice"/>
                <Button fx:id="higherButton" disable="true" layoutX="350.0" layoutY="85.0" onAction="#guessHigher" text="Higher"/>
                <Button fx:id="lowerButton" disable="true" layoutX="200.0" layoutY="85.0" onAction="#guessLower" text="Lower"/>
                <Button fx:id="quitButton" layoutX="50.0" layoutY="155.0" onAction="#quit" text="Quit"/>
                <Button fx:id="rulesButton" layoutX="500.0" layoutY="155.0" onAction="#showRules" text="Game Rules"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
